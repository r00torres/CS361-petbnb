<div class="container">
    <div class="row">
        <h1 style="text-align: center;">Add New Pet</h1>
        <div style="width: 30%; margin:25px auto;">
            <form action="/pets" method="post">
                <div class="form-group">
                    <label for="pet_name">Pet Name</label>
                    <input class="form-control" type="text" name="pet_name"required>
                </div>
                <div class="form-group">
                    <label for="pet_name">Pet Type</label>
                    <input class="form-control" type="text" name="pet_type"required>
                </div>
                <div class="form-group">
                    <label for="pet_name">Pet Breed</label>
                    <input class="form-control" type="text" name="pet_breed" required>
                </div>
                <div class="form-group">
                    <label for="pet_name">Pet Weight</label>
                    <input class="form-control" type="number" name="pet_weight">
                </div>
                <div class="form-group">
                    <label for="pet_name">Pet Picture URL</label>
                    <input class="form-control" type="text" name="pet_picture" required>
                </div>
                <div class="form-group">
                    <label for="pet_name">Pet Diet</label>
                    <input class="form-control" type="text" name="pet_diet" required>
                </div>
                <div class="form-group">
                    <label for="pet_name">Pet Medications</label>
                    <input class="form-control" type="text" name="medications"required>
                </div>
                <div class="form-group">
                    <label for="pet_name">Special Needs</label>
                    <input class="form-control" type="text" name="special_needs"required>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/pets">Go Back</a>
        </div>
    </div>
</div>