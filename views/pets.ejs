<% include ../partials/header %>
<div class="container">
    <header class="jumbotron">
        <div class="container">
            <h1>Welcome to PetBnb!</h1>
            <p>View our pets/p>
            <p><a class="btn btn-primary btn-lg" href="/pets/new">Add New Pet</a></p>
        </div>
    </header>
    <div class="row text-center" style="display:flex; flex-wrap:wrap;">
        <% Pets.forEach(function(pet){ %>
            <div class="col-md-3 col-sm-6">
                <div class="thumbnail">
                    <img src="<%=pet.pet_picture%>">
                    <div class="caption">
                        <h4><%=pet.pet_name%></h4>
                    </div>
                    <p>
                        <a href="/pet/<%=pet.pet_id %>" class="btn btn-primary">More Info</a>
                    </p>
                </div>
            </div>
        <% }); %>
    </div>
    <div class="row text-center">
        <% if (pages && pages > 0) { %>
        <ul class="pagination text-center">
            <% if (current == 1) { %>
            <li class="disabled"><a>First</a></li>
            <% } else { %>
            <li><a href="/pets">First</a></li>
            <% } %>
     
            <% if (current == 1) { %>
            <li class="disabled"><a>«</a></li>
            <% } else { %>
            <li><a href="/pets?page=<%= Number(current) - 1 %>">«</a></li>
            <% } %>
     
            <% var i = (Number(current) > 5 ? Number(current) - 4 : 1) %>
            <% if (i !== 1) { %>
            <li class="disabled"><a>...</a></li>
            <% } %>
            <% for (; i <= (Number(current) + 4) && i <= pages; i++) { %>
            <% if (i == current) { %>
            <li class="active"><a><%= i %></a></li>
            <% } else { %>
            <li><a href="/pets?page=<%= i %>"><%= i %></a></li>
            <% } %>
            <% if (i == Number(current) + 4 && i < pages) { %>
            <li class="disabled"><a>...</a></li>
            <% } %>
            <% } %>
     
            <% if (current == pages) { %>
            <li class="disabled"><a>»</a></li>
            <% } else { %>
            <li><a href="/pets?page=<%= Number(current) + 1 %>">»</a></li>
            <% } %>
     
            <% if (current == pages) { %>
            <li class="disabled"><a>Last</a></li>
            <% } else { %>
            <li><a href="/pets?page=<%= pages %>">Last</a></li>
            <% } %>
        </ul>
        <% } %>
    </div>
</div>
<% include ../partials/footer %>